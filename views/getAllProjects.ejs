<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Projects</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<header class="bg-blue-700 text-white py-4 shadow-lg">
    <div class="container mx-auto flex justify-between items-center px-4">
        <h1 class="text-3xl font-extrabold tracking-wide">Project Tracking System</h1>
        <nav>
            <ul class="flex space-x-6 text-lg">
                <li><a href="/" class="hover:underline">Home</a></li>
                <li><a href="/getallProjects" class="hover:underline">All Projects</a></li>
                <li><a href="/login" class="hover:underline">Login</a></li>
            </ul>
        </nav>
    </div>
</header>
<body class="bg-light">
    <div class="container mt-5">
        <!-- Back Button -->
        <a href="/home" class="btn btn-secondary mb-3">Back</a>

        <!-- Page Title -->
        <h1 class="text-center text-4xl font-extrabold bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-transparent bg-clip-text drop-shadow-md uppercase tracking-wide">
            All Projects
        </h1>
        
        
        <!-- Projects Table -->
        <table class="table table-bordered table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Upload Date</th>
                    <th>Delete Project</th>
                </tr>
            </thead>
            <tbody>
                <!-- Check if there are projects -->
                <% if (projects && projects.length > 0) { %>
                    <% projects.forEach((project) => { %>
                        <tr>
                            <td><%= project.id %></td>
                            <td><%= project.name %></td>
                            <td><%= project.description %></td>
                            <td><%= project.upload_date %></td>
                            <td>
                                <!-- Delete Project Form -->
                                <form action="/projects/delete/<%= project.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Delete Project</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <!-- No Projects Found -->
                    <tr>
                        <td colspan="6" class="text-center">No projects found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
